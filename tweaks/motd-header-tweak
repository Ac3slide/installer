#!/bin/bash

# Add this at the begining of all scripts.
if [ -f "include/startup.sh" ]; then
    . include/startup.sh
elif [ -f "../include/startup.sh" ]; then
    . ../include/startup.sh
fi

rootDir=$(rootDir)

echo "Installing update-motd" | log
apt install -y update-motd
waitOrStop 0

echo "Removing 10-help-text" | log
rm -f /etc/update-motd.d/10-help-text

echo "Removing 50-motd-news" | log
rm -f /etc/update-motd.d/50-motd-news

echo "Updating list of packages to upate" | log
echo -e "\n$(/usr/lib/update-notifier/apt-check --human-readable)\n" > /var/lib/update-notifier/updates-available

update-motd

if [ -f "$rootDir/DESCRIPTION.TXT" ]; then

    echo "Updating description in CWM backend" | log
    appendServerDescriptionTXT
    # descriptions=$(cat $rootDir/DESCRIPTION.TXT)
    # updateServerDescription "$descriptions"
    # appendServerDescription "$descriptions"

fi 
tagScript success

exit 0

