#!/bin/bash

# Add this at the begining of all scripts.
if [ -f "include/startup.sh" ]; then
    . include/startup.sh
elif [ -f "../include/startup.sh" ]; then
    . ../include/startup.sh
fi

# cp /etc/apt/sources.list /etc/apt/sources.list.bak
# cp /etc/apt/sources.list /etc/apt/sources.list.d/kamatera.list

mzone=$(echo ${ZONE,,} | sed 's/-ny2/-ny/ ; s/as/hk/')
mirrorDomain="ubuntu.mirrors.$mzone-try-kamatera-cloud-now-for-free.kamatera.com"
officialDomain="archive.ubuntu.com"

# sed -i 's/archive.ubuntu.com/'"${mirrorDomain}"'/g' /etc/apt/sources.list
sed -n 's/'"${officialDomain}"'/'"${mirrorDomain}"'/p' /etc/apt/sources.list.d/kamatera.list

cat << EOF > /etc/apt/preferences.d/kamatera-pin-600

Package: *
Pin: origin ${mirrorDomain}
Pin-Priority: 610

Package: *
Pin: origin ${officialDomain}
Pin-Priority: 600

EOF

tagScript success

exit 0