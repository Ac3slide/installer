#!/bin/bash

if [ -f "include/startup.sh" ]; then
    . include/startup.sh
elif [ -f "../include/startup.sh" ]; then
    . ../include/startup.sh
fi

checkTagExist ntpd.success

cat << EOF >> /etc/apt/sources.list.d/mongodb.list
deb [ arch=amd64,arm64 ] https://repo.mongodb.org/apt/ubuntu xenial/mongodb-org/3.6 multiverse
EOF
apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv 2930ADAE8CAF5059EE73BB4B58712A2291FA4AD5
apt update

# install mongodb from apt
apt-get install -y mongodb-org | log
waitOrStop 0

checkPackageInstalled mongodb-org

systemctl enable mongod.service
systemctl start mongod.service 

tag mongodb.success
tagScript success

exit 0
